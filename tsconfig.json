{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/config": ["config"],
      "@/tailwindConfig": ["tailwindConfig"],
      "@/components/*": ["app/components/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/pages/*": ["app/pages/*"],
      "@/styles/*": ["app/styles/*"],
      "@/lib/*": ["app/lib/*"],
      "@/utils/*": ["app/utils/*"],
      "@/types/*": ["app/types/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
